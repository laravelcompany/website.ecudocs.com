  .cta {
    background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
    color: white;
    padding: 4rem 2rem;
    text-align: center;
    margin: 4rem -2rem 0 -2rem;
  }
  
  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  
  .cta p {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }
  
  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }
    
    .hero-subtitle {
      font-size: 1rem;
    }
    
    .hero-stats {
      gap: 1.5rem;
    }
    
    .stat-number {
      font-size: 2rem;
    }
    
    .section-header h2 {
      font-size: 2rem;
    }
    
    .hero-buttons, .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 100%;
      max-width: 250px;
    }
    
    .features-grid {
      grid-template-columns: 1fr;
    }
    
    .updates-grid {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 480px) {
    .hero, .cta {
      padding: 2rem 1rem;
    }
    
    section {
      padding: 0 1rem;
    }
    
